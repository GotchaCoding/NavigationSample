<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/temp"
    app:startDestination="@+id/tempScreen">

    <fragment
        android:id="@+id/tempScreen"
        android:name="org.techtown.weathersystem.temp.Temp"
        tools:layout="@layout/fragment_temp">

        <action
            android:id="@+id/action_temp_to_home"
            app:destination="@+id/homeScreen" />
        <argument
            android:name="temp"
            app:argType="integer"
            android:defaultValue="1" />
    </fragment>

    <fragment
        android:id="@+id/homeScreen"
        android:name="org.techtown.weathersystem.home.Home"
        tools:layout="@layout/fragment_home" />

</navigation>